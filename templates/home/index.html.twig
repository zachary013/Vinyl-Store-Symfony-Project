{% extends 'base.html.twig' %}

{% block title %}Vinyl Records Store - Home{% endblock %}

{% block content %}
    <!-- Categories Section -->
    <section>
        <h2 class="section-title">Categories</h2>
        <div class="row">
            {% for category in categories %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ category.name }}</h5>
                            <p class="card-text">{{ category.description }}</p>
                            <a href="{{ path('category_products', {'id': category.id}) }}" class="btn btn-primary">View Products</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-md-12">
                    <p>No categories found.</p>
                </div>
            {% endfor %}
        </div>
    </section>

    <!-- Featured Products Section -->
    <section>
        <h2 class="section-title mt-5">Featured Products</h2>
        <div class="row">
            {% for product in featuredProducts %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="{{ product.image }}" class="card-img-top" alt="{{ product.name }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">{{ product.description }}</p>
                            <p class="card-text"><strong>Price: ${{ product.price }}</strong></p>
                            <a href="{{ path('product_details', {'id': product.id}) }}" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-md-12">
                    <p>No featured products available.</p>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
